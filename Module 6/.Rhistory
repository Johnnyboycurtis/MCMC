library(markovchain)
## set up transition matrix
P <- matrix(data = c(0.35, 0.45, 0.20,
0.60, 0.30, 0.10,
0.55, 0.40, 0.05), byrow = TRUE,
nrow = 3, ncol = 3,
dimnames = list(c("win", "lose", "tie"), c("win", "lose", "tie")))
P <- new( "markovchain", transitionMatrix = P)
print(P)
plot(P, main = "3-State Markov Chain")
